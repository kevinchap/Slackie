<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#443642">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slackie"
        android:id="@+id/nameApplicationTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:textColor="#FFFFFF"
        android:textSize="60sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post to Slack with a tap of the finger."
        android:id="@+id/sloganApplicationTextView"
        android:layout_below="@+id/nameApplicationTextView"
        android:layout_centerHorizontal="true"
        android:textColor="#7c737b"
        android:textSize="17sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65sp"
        android:id="@+id/connectSlackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:drawableTop="@drawable/slackicon"
        android:gravity="center"
        android:textAlignment="gravity"
        android:paddingBottom="20sp"
        android:paddingTop="20sp"/>

</RelativeLayout>
