<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.kevinchapron.Slackie" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.kevinchapron.Slackie.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.kevinchapron.Slackie.ConnectSlackActivity" />
        <activity android:name="fr.kevinchapron.Slackie.ListPostActivity" />
        <activity android:name="fr.kevinchapron.Slackie.CreatePostActivity" />
        <activity android:name="fr.kevinchapron.Slackie.EditPostActivity" />
    </application>

</manifest>
